generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  description  String
  startAt      DateTime
  endAt        DateTime
  locationName String
  address      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([startAt])
}
