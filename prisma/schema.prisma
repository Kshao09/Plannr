// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ORGANIZER
  MEMBER
}

enum RSVPStatus {
  GOING
  MAYBE
  DECLINED
}

enum AttendanceState {
  CONFIRMED
  WAITLISTED
}

enum TicketTier {
  FREE
  PREMIUM
}

enum RecurrenceFrequency {
  WEEKLY
  MONTHLY
  YEARLY
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  role           Role    @default(MEMBER)
  hashedPassword String?

  events Event[] @relation("OrganizerEvents")
  rsvps  RSVP[]

  savedEvents         SavedEvent[]
  passwordResetTokens PasswordResetToken[]

  emailVerificationTokens EmailVerificationToken[]
  accounts                Account[]
  sessions                Session[]
}

model Event {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  description  String?
  startAt      DateTime
  endAt        DateTime
  locationName String?

  address      String?
  city         String?
  state        String?

  category String?
  image    String?
  images   String[] @default([]) // ✅ up to 5 stored here
  ticketTier TicketTier @default(FREE)

  isRecurring  Boolean  @default(false)
  recurrence   RecurrenceFrequency?

  organizerId String
  organizer   User   @relation("OrganizerEvents", fields: [organizerId], references: [id])

  capacity        Int?
  waitlistEnabled Boolean @default(true)
  checkInSecret   String  @default(cuid()) // staff link secret

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  savedBy SavedEvent[]
  rsvps   RSVP[]

  @@index([startAt])
  @@index([locationName])
  @@index([organizerId, startAt])
  @@index([category])
  @@index([city, state])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model RSVP {
  id     String     @id @default(cuid())
  status RSVPStatus @default(GOING)

  // ✅ NEW: waitlist + check-in + reminders
  attendanceState   AttendanceState @default(CONFIRMED)
  checkInCode       String          @unique @default(cuid())
  checkedInAt       DateTime?
  reminder24hSentAt DateTime?
  reminder1hSentAt  DateTime?

  userId  String
  eventId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
  @@index([eventId, status, attendanceState, createdAt])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model IdempotencyKey {
  id         String   @id @default(cuid())
  route      String
  key        String
  userId     String?

  state      String   @default("PENDING") // PENDING | COMPLETED
  statusCode Int?
  response   Json?

  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@unique([route, key], name: "route_key")
  @@index([expiresAt])
  @@index([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@index([expires])
}

model SavedEvent {
  id        String   @id @default(cuid())
  userId    String
  eventId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
}

model EmailLog {
  id        String   @id @default(cuid())
  dedupeKey String   @unique
  kind      String
  to        String

  status    String   @default("PENDING") // PENDING | SENT | FAILED
  providerId String?
  error     String?

  meta      Json?

  createdAt DateTime @default(now())
  sentAt    DateTime?

  @@index([createdAt])
  @@index([kind])
  @@index([to])
}